{
	"name": "Noro",
	"description": "The Productivity Intelligence Agent",
	"version": "1.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "index.html",
		"default_title": "Noro"
	},
	"permissions": ["activeTab", "tabs", "storage", "scripting", "idle", "notifications"],
	"host_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "dist/background.js",
		"type": "module"
	},
	"icons": {
		"16": "/public/assets/icon_16.png",
		"32": "/public/assets/icon_32.png",
		"48": "/public/assets/icon_48.png",
		"128": "/public/assets/icon_128.png"
	}
}
